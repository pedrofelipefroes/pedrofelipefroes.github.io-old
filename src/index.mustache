	<main class="c-card-list">
		{{#card-list}}
			<a href="{{url}}" class="c-card">
				<figure class="c-card__thumbnail" style="background-image: url({{thumbnail}});"></figure>
				<div class="c-card__title">
					<small class="o-tag"><strong>{{tags}}</strong></small>
					<p><strong>{{name}}</strong></p>
				</div>
			</a>
		{{/card-list}}
	</main>

	{{> ../src/partials/footer/footer }}
